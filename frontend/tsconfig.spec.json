{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "esModuleInterop": true,   // needed for I18nTestingModule, to be able to import json
    "resolveJsonModule": true, // needed for I18nTestingModule, to be able to import json
    "outDir": "./out-tsc/spec",
    "types": [
      "jasmine",
      "node"
    ]
  },
  "files": [
    "src/test.ts",
    "src/polyfills.ts"
  ],
  "include": [
    "src/**/*.spec.ts",
    "src/**/*.d.ts"
  ]
}
